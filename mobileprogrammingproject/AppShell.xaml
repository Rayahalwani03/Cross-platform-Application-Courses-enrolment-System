<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="mobileprogrammingproject.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:mobileprogrammingproject"
    Shell.FlyoutBehavior="Disabled"
    Title="mobileprogrammingproject">

    <TabBar>

        <Tab Title="Student" >

            <ShellContent ContentTemplate="{DataTemplate local:MainPage }" Route="MainPage"/>

        </Tab>


        <Tab Title="Course" >

            <ShellContent ContentTemplate="{DataTemplate local:CoursePage }" Route="CoursePage"/>

        </Tab>


        <Tab Title="Enrollment" >

            <ShellContent ContentTemplate="{DataTemplate local:EnrollPage }" Route="EnrollPage"/>

        </Tab>



    </TabBar>
</Shell>
